---
// Gallery items - replace with actual images
const galleryItems = [
  { before: "/images/gallery-1-before.jpg", after: "/images/gallery-1-after.jpg" },
  { before: "/images/gallery-2-before.jpg", after: "/images/gallery-2-after.jpg" },
  { before: "/images/gallery-3-before.jpg", after: "/images/gallery-3-after.jpg" },
];
---

<section id="gallery" class="py-24 px-4">
  <div class="max-w-6xl mx-auto">
    <!-- Section Header -->
    <div class="text-center mb-16">
      <h2 class="text-3xl md:text-4xl font-bold mb-4">
        See the Results
      </h2>
      <p class="text-white/60 text-lg max-w-2xl mx-auto">
        Real examples generated by our AI
      </p>
    </div>

    <!-- Gallery Grid -->
    <div class="grid md:grid-cols-3 gap-6">
      {galleryItems.map((item, index) => (
        <div class="group relative aspect-square rounded-2xl overflow-hidden bg-white/5">
          {/* Before Image */}
          <img
            src={item.before}
            alt={`Example ${index + 1} before`}
            class="absolute inset-0 w-full h-full object-cover transition-opacity duration-500 group-hover:opacity-0"
          />
          {/* After Image */}
          <img
            src={item.after}
            alt={`Example ${index + 1} after`}
            class="absolute inset-0 w-full h-full object-cover opacity-0 transition-opacity duration-500 group-hover:opacity-100"
          />
          {/* Hover instruction */}
          <div class="absolute bottom-4 left-4 right-4 text-center">
            <span class="px-3 py-1 bg-black/60 backdrop-blur-sm rounded-full text-sm text-white/80 group-hover:opacity-0 transition-opacity">
              Hover to see tattoo
            </span>
          </div>
        </div>
      ))}
    </div>

    <!-- Note -->
    <p class="text-center text-white/40 text-sm mt-8">
      * All images generated using TattThat AI
    </p>
  </div>
</section>
