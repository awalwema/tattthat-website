---
import ImageLightbox from './ImageLightbox.tsx';

const steps = [
  {
    number: "1",
    icon: "/images/step-upload.png",
    title: "Upload Your Photo",
    description: "Snap a pic of where you want it"
  },
  {
    number: "2",
    icon: "/images/step-design.png",
    title: "Pick a Design",
    description: "Choose from 50+ designs or convert your own image"
  },
  {
    number: "3",
    icon: "/images/step-result.png",
    title: "See Your Tattoo",
    description: "See your tattoo come to life in seconds"
  }
];
---

<section id="how-it-works" class="py-24 px-4">
  <div class="max-w-6xl mx-auto">
    <!-- Section Header -->
    <div class="text-center mb-16">
      <h2 class="text-3xl md:text-4xl font-bold mb-4">
        3 Steps. 30 Seconds.
      </h2>
      <p class="text-white/60 text-lg max-w-2xl mx-auto">
        That's all it takes
      </p>
    </div>

    <!-- Steps -->
    <div class="grid md:grid-cols-3 gap-8 md:gap-12">
      {steps.map((step, index) => (
        <div class="relative text-center">
          {/* Connector line (hidden on mobile, hidden after last item) */}
          {index < steps.length - 1 && (
            <div class="hidden md:block absolute top-12 left-1/2 w-full h-px bg-gradient-to-r from-white/20 to-transparent"></div>
          )}

          {/* Icon */}
          <div class="mb-6">
            <ImageLightbox
              client:load
              src={step.icon}
              alt={step.title}
              number={step.number}
              className="w-48 h-48 md:w-56 md:h-56"
            />
          </div>

          {/* Content */}
          <h3 class="text-xl font-semibold mb-2">{step.title}</h3>
          <p class="text-white/60">{step.description}</p>
        </div>
      ))}
    </div>
  </div>
</section>
